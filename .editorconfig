root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[inspector]
indent_size = 4
indent_style = tab

[*.{ron,rs}]
indent_size = 4
indent_style = space

[*.toml]
indent_size = 4
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space
